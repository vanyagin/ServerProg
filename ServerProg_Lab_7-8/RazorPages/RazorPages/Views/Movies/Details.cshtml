@model RazorPages.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        @if (Model.Budget != null && Model.Budget != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Budget)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Budget)
            </dd>
        }

        @if (Model.Homepage != null && Model.Homepage != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Homepage)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Homepage)
            </dd>
        }

        @if (Model.Overview != null && Model.Overview != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Overview)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Overview)
            </dd>
        }

        @if (Model.Popularity != null && Model.Popularity != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Popularity)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Popularity)
            </dd>
        }

        @if (Model.ReleaseDate != null && Model.ReleaseDate != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
        }
        
        @if (Model.Revenue != null && Model.Revenue != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Revenue)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Revenue)
            </dd>
        }

        @if (Model.Runtime != null && Model.Runtime != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Runtime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Runtime)
            </dd>
        }

        @if (Model.MovieStatus != null && Model.MovieStatus != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MovieStatus)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MovieStatus)
            </dd>
        }

        @if (Model.Tagline != null && Model.Tagline != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Tagline)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tagline)
            </dd>
        }

        @if (Model.VoteAverage != null && Model.VoteAverage != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.VoteAverage)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.VoteAverage)
            </dd>
        }

        @if (Model.VoteCount != null && Model.VoteCount != string.Empty)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.VoteCount)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.VoteCount)
            </dd>
        }

        @if (Model.Persons != null && Model.Persons.Count != 0)
        {
            <dt class="col-sm-2">
                Actors
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var p in Model.Persons)
                    {
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Persons" asp-action="Details" asp-route-id="@p.Id">@p.Name (@(Model.MoviePersons.First(x => x.PersonId == p.Id).CharacterName))</a>
                        </li>
                    }
                </ul>
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a><text> </text>
    }
    <a asp-action="Index">Back to List</a>
</div>
