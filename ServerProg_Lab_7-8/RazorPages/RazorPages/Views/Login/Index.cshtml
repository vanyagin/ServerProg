@model RazorPages.Controllers.Utils.UserForm

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <h4>Are you sure you want to sign out?</h4>
        <hr />
        <form asp-action="SignOut">
            <div class="form-group">
                <input type="submit" value="Sign Out" class="btn btn-primary" />
            </div>
        </form>
    }
    else
    {
        <h4>Fill in your login and password</h4>
        <hr />
        <div class="col-md-4">
            <form asp-action="">
                <div asp-validation-summary="ModelOnly" class="text-danger" id="myCustomSummary"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input asp-action="SignIn" type="submit" value="Sign In" class="btn btn-primary" />
                    <input asp-action="SignUp" type="submit" value="Sign Up" class="btn btn-primary" />
                </div>
            </form>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

